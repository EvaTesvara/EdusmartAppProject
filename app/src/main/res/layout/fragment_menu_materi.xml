<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMenuMateri">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Materi"
        android:textColor="#104E62"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="120dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!--Hari senin-->
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_marginBottom="15dp"
                app:cardBackgroundColor="#D1D0E2"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Senin"
                    android:textColor="#104E62"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_seninindo"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="B.Indonesia"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="B.Inggris"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Kimia"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <!--Hari selasa-->
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#D1D0E2"
                app:cardCornerRadius="20dp"
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Selasa"
                    android:textColor="#104E62"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Matematika"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Fisika"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Biologi"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <!--Hari Rabu-->
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#D1D0E2"
                app:cardCornerRadius="20dp"
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Rabu"
                    android:textColor="#104E62"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="B.inggris"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Matematika"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Kimia"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="#53B2D0"
                    android:text="B.indonesia"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <!--Hari kamis-->
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#D1D0E2"
                app:cardCornerRadius="20dp"
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Kamis"
                    android:textColor="#104E62"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Biologi"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Fisika"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Kimia"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <!--Hari Jumat-->
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#D1D0E2"
                app:cardCornerRadius="20dp"
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Jumat"
                    android:textColor="#104E62"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="B.Indonesia"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#53B2D0"
                    android:text="B.Inggris"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="#53B2D0"
                    android:text="Kimia"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</FrameLayout>